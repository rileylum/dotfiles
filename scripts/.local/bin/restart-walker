#!/bin/bash

# Restart Walker and Elephant services (useful after updates or config changes)

echo "Stopping walker and elephant..."
pkill -x walker 2>/dev/null
pkill -x elephant 2>/dev/null

sleep 0.3

echo "Starting elephant..."
setsid uwsm-app -- elephant >/dev/null 2>&1 &

sleep 0.2

echo "Starting walker service..."
setsid uwsm-app -- walker --gapplication-service >/dev/null 2>&1 &

echo "Done. Walker is ready."
